<Window x:Class="FreeMyRam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FreeMyRam" 
        Height="480" Width="360"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        Focusable="True"
        PreviewKeyDown="Window_PreviewKeyDown">
    
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <!-- Fade in -->
                    <DoubleAnimation Storyboard.TargetName="MainBorder"
                                    Storyboard.TargetProperty="Opacity"
                                    From="0" To="1" Duration="0:0:0.3">
                        <DoubleAnimation.EasingFunction>
                            <QuadraticEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <!-- Slide up -->
                    <DoubleAnimation Storyboard.TargetName="MainBorderTransform"
                                    Storyboard.TargetProperty="Y"
                                    From="20" To="0" Duration="0:0:0.35">
                        <DoubleAnimation.EasingFunction>
                            <QuadraticEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    
    <Border x:Name="MainBorder"
            Background="{DynamicResource PrimaryBrush}" 
            CornerRadius="16" 
            BorderBrush="{DynamicResource AccentBrush}" 
            BorderThickness="1"
            Opacity="0"
            RenderTransformOrigin="0.5,0.5">
        <Border.RenderTransform>
            <TranslateTransform x:Name="MainBorderTransform" Y="20"/>
        </Border.RenderTransform>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0">
                <!-- Transparent drag area covering entire header -->
                <Border Background="Transparent" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"/>
                
                <!-- Title content -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0"
                            IsHitTestVisible="False">
                    <TextBlock Text="ðŸ§¹ FreeMyRam" 
                              Foreground="{DynamicResource TextBrush}" 
                              FontSize="14" 
                              FontWeight="Bold"/>
                    <TextBlock Text="v1.2 by rainaku" 
                              Foreground="{DynamicResource SubTextBrush}" 
                              FontSize="10" 
                              Margin="8,4,0,0"
                              VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Window buttons (need to be hit-testable) -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,8,0">
                    <!-- Language Flags -->
                    <Button Click="VietnameseLanguage_Click" Style="{StaticResource FlagButton}" Padding="2" Margin="0,0,4,0" ToolTip="Tiáº¿ng Viá»‡t">
                        <Grid Width="24" Height="16">
                            <Rectangle Fill="#DA251D" RadiusX="1" RadiusY="1"/>
                            <Path Data="M 12,2 L 14.9,8.5 L 22,8.5 L 16.2,12.6 L 18.5,19.5 L 12,15.3 L 5.5,19.5 L 7.8,12.6 L 2,8.5 L 9.1,8.5 Z" 
                                  Fill="#FFFF00" Stretch="Uniform" Margin="4"/>
                        </Grid>
                    </Button>
                    
                    <Button Click="EnglishLanguage_Click" Style="{StaticResource FlagButton}" Padding="2" Margin="0,0,8,0" ToolTip="English">
                        <Grid Width="24" Height="16" ClipToBounds="True">
                             <Border CornerRadius="1" Background="White" BorderThickness="0">
                                 <Grid>
                                    <StackPanel>
                                        <Rectangle Height="2.28" Fill="#B22234"/>
                                        <Rectangle Height="2.28" Fill="White"/>
                                        <Rectangle Height="2.28" Fill="#B22234"/>
                                        <Rectangle Height="2.28" Fill="White"/>
                                        <Rectangle Height="2.28" Fill="#B22234"/>
                                        <Rectangle Height="2.28" Fill="White"/>
                                        <Rectangle Height="2.28" Fill="#B22234"/>
                                    </StackPanel>
                                    <Rectangle Width="10" Height="9" Fill="#3C3B6E" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                    <Canvas Width="10" Height="9" HorizontalAlignment="Left" VerticalAlignment="Top">
                                        <!-- Simplified Stars as dots -->
                                        <Ellipse Width="1" Height="1" Fill="White" Canvas.Left="2" Canvas.Top="2"/>
                                        <Ellipse Width="1" Height="1" Fill="White" Canvas.Left="5" Canvas.Top="2"/>
                                        <Ellipse Width="1" Height="1" Fill="White" Canvas.Left="8" Canvas.Top="2"/>
                                        <Ellipse Width="1" Height="1" Fill="White" Canvas.Left="3.5" Canvas.Top="4"/>
                                        <Ellipse Width="1" Height="1" Fill="White" Canvas.Left="6.5" Canvas.Top="4"/>
                                        <Ellipse Width="1" Height="1" Fill="White" Canvas.Left="2" Canvas.Top="6"/>
                                        <Ellipse Width="1" Height="1" Fill="White" Canvas.Left="5" Canvas.Top="6"/>
                                        <Ellipse Width="1" Height="1" Fill="White" Canvas.Left="8" Canvas.Top="6"/>
                                    </Canvas>
                                </Grid>
                             </Border>
                        </Grid>
                    </Button>
                    
                    <Button Content="â€”" Click="Minimize_Click" 
                            Style="{StaticResource OptionButton}" Padding="8,4"/>
                    <Button Content="âœ•" Click="Close_Click" 
                            Style="{StaticResource OptionButton}" Padding="8,4"/>
                </StackPanel>
            </Grid>

            <!-- RAM Info -->
            <Border Grid.Row="1" Background="{DynamicResource SecondaryBrush}" 
                    CornerRadius="12" Margin="16,8,16,8" Padding="16">
                <StackPanel>
                    <TextBlock x:Name="MemoryUsageLabel"
                              Text="Memory Usage" 
                              Foreground="{DynamicResource SubTextBrush}" 
                              FontSize="12"/>
                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="MemoryUsageText" 
                                  Text="-- / -- GB" 
                                  Foreground="{DynamicResource TextBrush}" 
                                  FontSize="24" 
                                  FontWeight="Bold"/>
                        <TextBlock x:Name="MemoryPercentText" 
                                  Grid.Column="1"
                                  Text="--%"
                                  Foreground="{DynamicResource HighlightBrush}" 
                                  FontSize="24" 
                                  FontWeight="Bold"/>
                    </Grid>
                    <ProgressBar x:Name="MemoryProgressBar" 
                                Height="6" 
                                Margin="0,12,0,0" 
                                Value="0" 
                                Maximum="100"
                                Background="{DynamicResource AccentBrush}"
                                Foreground="{DynamicResource HighlightBrush}"
                                BorderThickness="0"/>
                    
                    <!-- Ram Cached Section -->
                    <Grid Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="CachedMemoryLabel"
                                  Text="Cached" 
                                  Foreground="{DynamicResource SubTextBrush}" 
                                  FontSize="12"
                                  VerticalAlignment="Center"/>
                        <TextBlock x:Name="CachedMemoryText" 
                                  Grid.Column="1"
                                  Text="-- GB"
                                  Foreground="{DynamicResource SubTextBrush}" 
                                  FontSize="12"
                                  FontWeight="SemiBold"
                                  VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Clean Options -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="16,0">
                <StackPanel x:Name="OptionsPanel">
                    <TextBlock x:Name="QuickActionsLabel"
                              Text="QUICK ACTIONS" 
                              Foreground="{DynamicResource SubTextBrush}" 
                              FontSize="11" 
                              FontWeight="SemiBold"
                              Margin="0,0,0,8"/>
                    
                    <Button x:Name="CleanAllButton"
                            Content="âš¡ Clean All Memory" 
                            Style="{StaticResource CleanButton}" 
                            Click="CleanAll_Click"
                            Margin="10,0,10,12"/>
                    
                    <StackPanel>
                        <TextBlock x:Name="HiddenAdvancedOptionsLabel"
                                  Text="ðŸ”§ ADVANCED OPTIONS" 
                                  Foreground="{DynamicResource HighlightBrush}" 
                                  FontSize="11" 
                                  FontWeight="SemiBold"
                                  Margin="0,8,0,8"/>
                        
                        <Border Background="{DynamicResource SecondaryBrush}" CornerRadius="8" Padding="4">
                            <StackPanel>
                                <Button x:Name="FlushWorkingSetsBtn"
                                        Content="Flush Working Sets" 
                                        Style="{StaticResource OptionButton}" 
                                        Click="EmptyWorkingSets_Click"/>
                                <Button x:Name="FlushSystemWorkingSetBtn"
                                        Content="Flush System Working Set" 
                                        Style="{StaticResource OptionButton}" 
                                        Click="EmptySystemWorkingSet_Click"/>
                                <Button x:Name="FlushModifiedPageListBtn"
                                        Content="Flush Modified Page List" 
                                        Style="{StaticResource OptionButton}" 
                                        Click="EmptyModifiedPageList_Click"/>
                                <Button x:Name="FlushStandbyListBtn"
                                        Content="Flush Standby List" 
                                        Style="{StaticResource OptionButton}" 
                                        Click="EmptyStandbyList_Click"/>
                                <Button x:Name="FlushPriority0StandbyListBtn"
                                        Content="Flush Priority 0 Standby List" 
                                        Style="{StaticResource OptionButton}" 
                                        Click="EmptyPriority0StandbyList_Click"/>
                                <Button x:Name="CleanDiskBtn"
                                        Content="Clean Temp &amp; Recycle Bin" 
                                        Style="{StaticResource OptionButton}" 
                                        Click="CleanDisk_Click"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Secret Developer Panel - Hidden by default, shown when secret code "10720040" is typed -->
                    <StackPanel x:Name="SecretDevPanel" Visibility="Collapsed">
                        <TextBlock Text="ðŸ•µï¸ INTERNAL DEBUG" 
                                  Foreground="Red" 
                                  FontSize="11" 
                                  FontWeight="SemiBold"
                                  Margin="0,16,0,4"/>
                        
                        <TextBlock x:Name="DevModeWarningText"
                                  Text="Do not tamper unless you know what you're doing!"
                                  Foreground="Orange"
                                  FontSize="10"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,8"/>
                        
                        <Border Background="{DynamicResource SecondaryBrush}" CornerRadius="8" Padding="4" BorderBrush="Red" BorderThickness="1">
                            <StackPanel>
                                <Button x:Name="TestHighRamBtn"
                                        Content="âš ï¸ Test: Fill RAM to 85%" 
                                        Style="{StaticResource OptionButton}" 
                                        Click="TestHighRam_Click"
                                        Foreground="Red"/>
                                        
                                <Button x:Name="HideDevModeBtn"
                                        Content="ðŸ”’ Hide Debug Mode" 
                                        Style="{StaticResource OptionButton}" 
                                        Click="HideDevMode_Click"
                                        Foreground="{DynamicResource HighlightBrush}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <TextBlock x:Name="SettingsLabel"
                              Text="SETTINGS" 
                              Foreground="{DynamicResource SubTextBrush}" 
                              FontSize="11" 
                              FontWeight="SemiBold"
                              Margin="0,16,0,8"/>
                    
                    <Border Background="{DynamicResource SecondaryBrush}" CornerRadius="8" Padding="8">
                        <StackPanel>
                            <Button x:Name="CleanOnStartupBtn"
                                    Style="{StaticResource OptionButton}"
                                    Click="CleanOnStartup_Click"
                                    HorizontalContentAlignment="Stretch">
                                <Grid>
                                    <TextBlock x:Name="CleanOnStartupText" 
                                               Text="Clean on Startup" 
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"/>
                                    <Border x:Name="ToggleBorder" 
                                            Width="40" Height="20" 
                                            CornerRadius="10" 
                                            Background="#555555"
                                            HorizontalAlignment="Right">
                                        <Ellipse x:Name="ToggleCircle"
                                                 Width="16" Height="16" 
                                                 Fill="White"
                                                 HorizontalAlignment="Left"
                                                 Margin="2,0,0,0"/>
                                    </Border>
                                </Grid>
                            </Button>
                            <Button x:Name="StartWithWindowsBtn"
                                    Style="{StaticResource OptionButton}"
                                    Click="StartWithWindows_Click"
                                    HorizontalContentAlignment="Stretch">
                                <Grid>
                                    <TextBlock x:Name="StartWithWindowsText" 
                                               Text="Start with Windows" 
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"/>
                                    <Border x:Name="ToggleStartupBorder" 
                                            Width="40" Height="20" 
                                            CornerRadius="10" 
                                            Background="#555555"
                                            HorizontalAlignment="Right">
                                        <Ellipse x:Name="ToggleStartupCircle"
                                                 Width="16" Height="16" 
                                                 Fill="White"
                                                 HorizontalAlignment="Left"
                                                 Margin="2,0,0,0"/>
                                    </Border>
                                </Grid>
                            </Button>
                            <Button x:Name="AutoCleanIntervalBtn"
                                    Style="{StaticResource OptionButton}"
                                    Click="AutoCleanInterval_Click"
                                    HorizontalContentAlignment="Stretch">
                                <Grid>
                                    <TextBlock x:Name="AutoCleanIntervalText" 
                                               Text="Auto clean every: Off" 
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"/>
                                    <TextBlock x:Name="AutoCleanIntervalValue"
                                               Text="Off"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right"
                                               Foreground="{DynamicResource HighlightBrush}"
                                               FontWeight="SemiBold"/>
                                </Grid>
                            </Button>
                            <Button x:Name="AutoCleanHighRamBtn"
                                    Style="{StaticResource OptionButton}"
                                    Click="AutoCleanHighRam_Click"
                                    HorizontalContentAlignment="Stretch">
                                <Grid>
                                    <TextBlock x:Name="AutoCleanHighRamText" 
                                               Text="Auto clean when RAM > 70%" 
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"/>
                                    <Border x:Name="ToggleHighRamBorder" 
                                            Width="40" Height="20" 
                                            CornerRadius="10" 
                                            Background="#555555"
                                            HorizontalAlignment="Right">
                                        <Ellipse x:Name="ToggleHighRamCircle"
                                                 Width="16" Height="16" 
                                                 Fill="White"
                                                 HorizontalAlignment="Left"
                                                 Margin="2,0,0,0"/>
                                    </Border>
                                </Grid>
                            </Button>
                            <Button x:Name="ThemeToggleBtn"
                                    Content="Theme: Dark"
                                    Style="{StaticResource OptionButton}"
                                    Click="ThemeToggle_Click"
                                    HorizontalContentAlignment="Left"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Status Bar -->
            <Border Grid.Row="3" Margin="16,4,16,8">
                <StackPanel>
                    <TextBlock x:Name="StatusText" 
                              Text="Ready" 
                              Foreground="{DynamicResource SubTextBrush}" 
                              FontSize="10"
                              HorizontalAlignment="Center"
                              Opacity="0.8"/>
                    <TextBlock x:Name="FreedMemoryText" 
                              Text="" 
                              Foreground="{DynamicResource HighlightBrush}" 
                              FontSize="11"
                              FontWeight="SemiBold"
                              HorizontalAlignment="Center"
                              Margin="0,2,0,0"/>
                    
                    <!-- Social Links -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,6,0,0">
                        <StackPanel.Resources>
                            <Style x:Key="FooterLink" TargetType="Button" BasedOn="{StaticResource OptionButton}">
                                <Setter Property="Padding" Value="4,2"/>
                                <Setter Property="FontSize" Value="10"/>
                                <Setter Property="Opacity" Value="0.6"/>
                            </Style>
                        </StackPanel.Resources>
                        <Button Content="Facebook" Style="{StaticResource FooterLink}" Click="Facebook_Click"/>
                        <TextBlock Text="Â·" Foreground="{DynamicResource SubTextBrush}" VerticalAlignment="Center" Margin="2,0" Opacity="0.5"/>
                        <Button Content="GitHub" Style="{StaticResource FooterLink}" Click="GitHub_Click"/>
                        <TextBlock Text="Â·" Foreground="{DynamicResource SubTextBrush}" VerticalAlignment="Center" Margin="2,0" Opacity="0.5"/>
                        <Button Content="Website" Style="{StaticResource FooterLink}" Click="Website_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
